{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: Debug Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/src/server.js",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Backend: Run Seed",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/src/db/seed.js",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "PERSCOM: Full Stack",
      "configurations": ["Backend: Debug Server"],
      "stopAll": true
    }
  ]
}
