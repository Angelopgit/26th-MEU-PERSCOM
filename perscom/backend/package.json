{
  "name": "perscom-backend",
  "version": "1.0.0",
  "description": "PERSCOM Management System - 26th MEU (SOC)",
  "main": "src/server.js",
  "scripts": {
    "start": "node --no-warnings src/server.js",
    "dev": "nodemon src/server.js",
    "seed": "node --no-warnings src/db/seed.js",
    "build:frontend": "cd ../frontend && npm run build",
    "deploy": "npm run build:frontend && cross-env NODE_ENV=production node --no-warnings src/server.js"
  },
  "nodemonConfig": {
    "nodeArgs": [
      "--no-warnings"
    ],
    "watch": [
      "src"
    ],
    "ext": "js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "discord.js": "^14.25.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=22.5.0"
  }
}
