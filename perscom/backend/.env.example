# Copy this file to .env and fill in the values before deploying.

# Application port (default: 3001)
PORT=3001

# JWT signing secret — change this to a long random string in production!
# Generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change-me-to-a-long-random-secret

# Set to "production" when deploying.
NODE_ENV=production

# ── Frontend URL ─────────────────────────────────────────────────────────────
# The public URL of the React frontend (no trailing slash).
# Used for OAuth redirects after Discord login.
FRONTEND_URL=https://26thmeu.org/perscom

# ── CORS ─────────────────────────────────────────────────────────────────────
# The origin the frontend is served from (used for CORS + dev override).
# In production this should be your domain root (not including /perscom path).
CORS_ORIGIN=https://26thmeu.org

# ── Discord Integration ──────────────────────────────────────────────────────
# Discord OAuth2 (from Discord Developer Portal > Application > OAuth2)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# The OAuth callback MUST be registered in Discord Developer Portal > OAuth2 > Redirects
# Set this to: https://YOUR_BACKEND_URL/api/auth/discord/callback
# Example: https://perscom-backend.up.railway.app/api/auth/discord/callback
DISCORD_REDIRECT_URI=https://YOUR_BACKEND_URL/api/auth/discord/callback

# Discord Bot (from Discord Developer Portal > Application > Bot)
DISCORD_BOT_TOKEN=

# Discord Guild (Server) ID
DISCORD_GUILD_ID=

# Discord channel ID where event logs will be posted
DISCORD_LOG_CHANNEL_ID=

# Discord Role IDs (from Server Settings > Roles, right-click > Copy Role ID)
# "26th Marine Personnel" — required to register on PERSCOM
DISCORD_ROLE_PERSONNEL=
# "26th MEU Command Staff" — required to use bot commands
DISCORD_ROLE_COMMAND_STAFF=

# Comma-separated Discord user IDs that are auto-assigned the admin role
DISCORD_ADMIN_IDS=
